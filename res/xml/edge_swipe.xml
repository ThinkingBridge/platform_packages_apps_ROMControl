<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.aokp.romcontrol"
    android:title="@string/edge_swipe_title">

    <PreferenceScreen
        android:key="edge_swipe_blacklist_header"
        android:fragment="com.aokp.romcontrol.fragments.EdgeSwipeNavigationBlacklist"
        android:title="@string/edge_swipe_blacklist_title" />

    <ListPreference android:key="gesture_one"
            android:title="@string/edge_swipe_left_title"
            android:entries="@array/edge_swipe_entries"
            android:entryValues="@array/edge_swipe_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <com.aokp.romcontrol.fragments.QuadNumberPickerPreference
            android:key="zone_one_grid"
            android:title="Zone 1 Size - White"
            android:summary="Start and end points as percentage of screen size"
            settings:pickerTitle1="X Start"
            settings:pickerTitle2="X End"
            settings:pickerTitle3="Y Start"
            settings:pickerTitle4="Y End"
            settings:defaultValue1="0"
            settings:defaultValue2="6"
            settings:defaultValue3="0"
            settings:defaultValue4="100"
            settings:max1="100"
            settings:min1="0"
            settings:max2="100"
            settings:min2="0"
            settings:max3="100"
            settings:min3="0"
            settings:max4="100"
            settings:min4="0" />

    <ListPreference android:key="gesture_type_one"
            android:title="Zone 1 Type"
            android:entries="@array/gesture_type_entries"
            android:entryValues="@array/gesture_type_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <ListPreference android:key="gesture_two"
            android:title="@string/edge_swipe_top_title"
            android:entries="@array/edge_swipe_entries"
            android:entryValues="@array/edge_swipe_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <com.aokp.romcontrol.fragments.QuadNumberPickerPreference
            android:key="zone_two_grid"
            android:title="Zone 2 Size - Red"
            android:summary="Start and end points as percentage of screen size"
            settings:pickerTitle1="X Start"
            settings:pickerTitle2="X End"
            settings:pickerTitle3="Y Start"
            settings:pickerTitle4="Y End"
            settings:defaultValue1="0"
            settings:defaultValue2="100"
            settings:defaultValue3="0"
            settings:defaultValue4="6"
            settings:max1="100"
            settings:min1="0"
            settings:max2="100"
            settings:min2="0"
            settings:max3="100"
            settings:min3="0"
            settings:max4="100"
            settings:min4="0" />

    <ListPreference android:key="gesture_type_two"
            android:title="Zone 2 Type"
            android:entries="@array/gesture_type_entries"
            android:entryValues="@array/gesture_type_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <ListPreference android:key="gesture_three"
            android:title="@string/edge_swipe_right_title"
            android:entries="@array/edge_swipe_entries"
            android:entryValues="@array/edge_swipe_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <com.aokp.romcontrol.fragments.QuadNumberPickerPreference
            android:key="zone_three_grid"
            android:title="Zone 3 Size - Green"
            android:summary="Start and end points as percentage of screen size"
            settings:pickerTitle1="X Start"
            settings:pickerTitle2="X End"
            settings:pickerTitle3="Y Start"
            settings:pickerTitle4="Y End"
            settings:defaultValue1="94"
            settings:defaultValue2="100"
            settings:defaultValue3="0"
            settings:defaultValue4="100"
            settings:max1="100"
            settings:min1="0"
            settings:max2="100"
            settings:min2="0"
            settings:max3="100"
            settings:min3="0"
            settings:max4="100"
            settings:min4="0" />

    <ListPreference android:key="gesture_type_three"
            android:title="Zone 3 Type"
            android:entries="@array/gesture_type_entries"
            android:entryValues="@array/gesture_type_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <ListPreference android:key="gesture_four"
            android:title="@string/edge_swipe_bottom_title"
            android:entries="@array/edge_swipe_entries"
            android:entryValues="@array/edge_swipe_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <com.aokp.romcontrol.fragments.QuadNumberPickerPreference
            android:key="zone_four_grid"
            android:title="Zone 4 Size - Blue"
            android:summary="Start and end points as percentage of screen size"
            settings:pickerTitle1="X Start"
            settings:pickerTitle2="X End"
            settings:pickerTitle3="Y Start"
            settings:pickerTitle4="Y End"
            settings:defaultValue1="0"
            settings:defaultValue2="100"
            settings:defaultValue3="94"
            settings:defaultValue4="100"
            settings:max1="100"
            settings:min1="0"
            settings:max2="100"
            settings:min2="0"
            settings:max3="100"
            settings:min3="0"
            settings:max4="100"
            settings:min4="0" />

    <ListPreference android:key="gesture_type_four"
            android:title="Zone 4 Type"
            android:entries="@array/gesture_type_entries"
            android:entryValues="@array/gesture_type_values"
            android:persistent="false"
            android:defaultValue="0"/>

    <CheckBoxPreference
            android:key="gesture_swipe_capture"
            android:title="@string/edge_swipe_move_title"
            android:summary="@string/edge_swipe_move_summary"
            android:persistent="false"/>

    <com.aokp.romcontrol.widgets.SeekBarPreference2
            android:key="gesture_swipe_distance"
            android:title="@string/gesture_swipe_distance"
            android:max="150"
            android:defaultValue="0" />


</PreferenceScreen>
